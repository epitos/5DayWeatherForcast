<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="140dp"
        android:layout_width="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="@dimen/size_8dp"
            app:cardCornerRadius="@dimen/size_8dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_12dp">

            <TextView
                    android:id="@+id/date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_15dp"
                    android:padding="@dimen/padding_10dp"
                    android:fontFamily="@font/lato_bold_font"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/date_time_title"/>

            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_15dp"
                    android:padding="@dimen/padding_10dp"
                    android:fontFamily="@font/lato_light_font"
                    app:layout_constraintTop_toBottomOf="@id/date_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="Date"/>

            <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_15dp"
                    android:padding="@dimen/padding_5dp"
                    android:fontFamily="@font/lato_light_font"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:text="Desc"/>

            <TextView
                    android:id="@+id/temp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_15dp"
                    android:padding="@dimen/padding_5dp"
                    android:fontFamily="@font/lato_bold_font"
                    android:text="@string/temp_title"
                    app:layout_constraintTop_toBottomOf="@id/desc"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_15dp"
                    android:padding="@dimen/padding_5dp"
                    android:fontFamily="@font/lato_light_font"
                    tools:text="100%"
                    app:layout_constraintTop_toBottomOf="@id/desc"
                    app:layout_constraintLeft_toRightOf="@id/temp_title"/>


            <TextView
                    android:id="@+id/humidity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_15dp"
                    android:padding="@dimen/padding_5dp"
                    android:fontFamily="@font/lato_bold_font"
                    android:text="@string/humidity_title"
                    app:layout_constraintTop_toBottomOf="@id/temp"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_15dp"
                    android:padding="@dimen/padding_5dp"
                    android:fontFamily="@font/lato_light_font"
                    tools:text="100%"
                    app:layout_constraintTop_toBottomOf="@id/temp"
                    app:layout_constraintLeft_toRightOf="@id/humidity_title"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
